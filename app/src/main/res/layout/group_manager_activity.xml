<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rela_title_groupManager_one"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:background="@color/colorBackground">

        <ImageView
            android:id="@+id/back_groupManager"
            android:layout_width="35dp"
            android:layout_marginLeft="10dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:background="@mipmap/returnlogo"
            android:gravity="center"
            android:textColor="#ffffff" />

        <TextView
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/back_groupManager"
            android:text="群成员"
            android:textColor="#ffffff"
            android:textSize="16dp" />
    </RelativeLayout>

    <TableLayout
        android:id="@+id/tbLayout_groupManager_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rela_title_groupManager_one"
        android:shrinkColumns="1"
        android:stretchColumns="2">

        <TableRow
            android:id="@+id/tbrorw"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="12dp">

           <ImageView
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="2dp"
                android:background="@drawable/groupmanager_icon_one" />
            <ImageView
                android:id="@+id/iv_invite"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="2dp"
                android:background="@drawable/groupmanager_icon_one" />

        </TableRow>

    </TableLayout>

    <RelativeLayout
        android:id="@+id/rela_title_groupManager_two"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/tbLayout_groupManager_one">
        <RelativeLayout
            android:id="@+id/rela_title_groupManager_two_one"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="群名称"
                android:textSize="24dp"
                android:layout_marginLeft="8dp"
                android:layout_centerVertical="true" />
            <TextView
                android:layout_width="210dp"
                android:layout_height="30dp"
                android:textSize="20dp"
                android:text="超级无敌霹雳总先锋队"
                android:ellipsize="end"
                android:gravity="right"
                android:layout_alignParentRight="true"
                android:maxLines="1"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rela_title_groupManager_two_two"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/rela_title_groupManager_two_one">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="群推送"
                android:textSize="24dp"
                android:layout_marginLeft="8dp"
                android:layout_centerVertical="true" />
            <TextView
                android:layout_width="210dp"
                android:layout_height="30dp"
                android:textSize="20dp"
                android:text="各位志愿者们今天在一饭六集合"

                android:gravity="right"
                android:layout_alignParentRight="true"
                android:lines="1"
                android:ellipsize="end"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <TableLayout
            android:id="@+id/tbLayout_groupManager_two"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_below="@id/rela_title_groupManager_two_two">
            <TableRow>
                <ImageView
                    android:id="@+id/iv_map"
                    android:layout_width="0dp"
                    android:layout_height="65dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/groupmanager_positioninformation"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="65dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/groupmanager_transfergroup"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="65dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/groupmanager_rpsetting"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:text="位置信息"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:text="转让群主"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:text="集结点设置"
                    android:gravity="center"/>
            </TableRow>
            <TableRow>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="65dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/groupmanager_sharegrouplocation"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="65dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/groupmanager_invitingmembers"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="65dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:text="群位置分享"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:text="成员移除"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:gravity="center"/>
            </TableRow>
        </TableLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tbLayout_groupManager_two">
            <Button
                android:layout_width="260dp"
                android:layout_height="55dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:text="退出群组"
                android:textSize="24dp"
                android:textColor="#ffffff"
                android:background="@drawable/groupmanager_tc_button"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
